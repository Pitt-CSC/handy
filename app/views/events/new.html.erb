<div class="container">
<h1>New event</h1>
<%= form_for @event do |event_form| %>

Name: <%= event_form.text_field :name, class: 'form-control' %><br />
Date: <%= event_form.date_field :date, class: 'form-control' %><br />
<%= event_form.submit "Create event", class: 'btn btn-primary' %>
<% end %>
</div>
