<h2><%= @event.name %> Attendance</h2>
<h4>Event Code: <code><%= @event.token %></code></h4>

<%= toggle_event_button(@event) %>

<% if @attendances.any? %>
  <p><%= pluralize @attendances.count, 'member' %> checked in for this event:</p>

  <ul>
    <% @attendances.each do |attendance| %>
      <li><%= attendance.member.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>No members have checked in for this event yet.</p>
<% end %>

<h4><%= link_to "Back to event list", events_url %></h4>
