<h2><%= @event.name %> Attendance</h2>
<h4>Event Code: <code><%= @event.token %></code></h4>

<%= toggle_event_button(@organization, @event) %>

<% if @attendees.any? %>
  <p><%= pluralize @attendees.count, 'member' %> checked in for this event:</p>

  <ul>
    <% @attendees.each do |attendee| %>
      <li><%= attendee.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>No members have checked in for this event yet.</p>
<% end %>

<h4><%= link_to "Print PDF", organization_event_url(@organization, @event, format: :pdf) %></h4>
<h4><%= link_to "Back to event list", organization_events_url(@organization) %></h4>
