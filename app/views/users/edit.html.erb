<h2>Your Account</h2>

<%= form_for @user do |form| %>
  Email: <%= form.text_field :email, class: 'form-control' %><br />
  Password: <%= form.password_field :password, class: 'form-control' %><br />
  Confirm password: <%= form.password_field :password_confirmation, class: 'form-control' %><br />

  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>
